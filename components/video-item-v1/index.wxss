/* components/video-item-v1/index.wxss */

.item {
  width: 100%;
  position: relative;
  margin-bottom: 20rpx;
}

.image {
  width:  100%;
  border-radius: 15rpx;
}

.info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  width: 100%;
  position: absolute;
  top: 161rpx;
  left: 0;
  box-sizing: border-box;
  font-size: 22rpx;
  height: 46rpx;
  border-radius: 0 0 15rpx 15rpx;
  padding: 0 14rpx;
  box-sizing: border-box;
  background-color:rgba(0,0,0,0.5);
}

.info .count {
  padding-left: 28rpx;
}
.info .count::before {
  content: ' ';
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  background-image: url('data:image/png;base64,');
  background-size: 100% 100%;
  
}

.name {
  font-size: 26rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}