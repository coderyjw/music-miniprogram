/* components/video-item-v2/index.wxss */
.video-item-v2 {
  display: flex;
  margin: 25rpx 0;
}

.video-item-v2 .image {
  width: 230rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.video-item-v2 .right-wrapper {
  width: calc(100% - 260rpx);
}

.video-item-v2 .right-wrapper .video-name {
  font-weight: 600;
  font-size: 26rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.video-item-v2 .right-wrapper .artist-name {
  font-size: 20rpx;
  margin-top: 10rpx;
}