/* components/video-item-v2/index.wxss */
.video-item-v2 {
  display: flex;
  margin: 25rpx 0;
}

.video-item-v2 .image {
  width: 230rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  position: relative;
}

.video-item-v2 .image .play-time {
  position: absolute;
  right: 10rpx;
  bottom: 6rpx;
  font-size: 22rpx;
  color: #fff;
}

.video-item-v2 .image .play-time::before {
  content: ' ';
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  bottom: 0rpx;
  left: -34rpx;
  background-image: url('data:image/png;base64,');
  background-size: 100% 100%;
}


.video-item-v2 .right-wrapper {
  width: calc(100% - 260rpx);
}

.video-item-v2 .right-wrapper .video-name {
  font-weight: 600;
  font-size: 26rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.video-item-v2 .right-wrapper .artist-name {
  font-size: 20rpx;
  margin-top: 20rpx;
}